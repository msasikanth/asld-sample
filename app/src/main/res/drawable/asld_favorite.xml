<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/selected"
        android:drawable="@drawable/ic_favorite_selected"
        android:state_checked="true" />
    <item
        android:id="@+id/unselected"
        android:drawable="@drawable/ic_favorite_unselected"
        android:state_checked="false" />

    <transition
        android:drawable="@drawable/avd_favorite_unselected_to_selected"
        android:fromId="@id/unselected"
        android:toId="@id/selected" />
    <transition
        android:drawable="@drawable/avd_favorite_selected_to_unselected"
        android:fromId="@id/selected"
        android:toId="@id/unselected" />
</animated-selector>
